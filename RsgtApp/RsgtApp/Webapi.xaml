<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RsgtApp.Webapi">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Web API Test"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label x:Name="lblWebAPI" Text="Select a WebAPI" Margin="0,0,0,10" FontFamily="Montserrat-Regular" TextColor="white" FontSize="22" HorizontalOptions="CenterAndExpand"/>

            <Picker x:Name="picWebAPI" Title="Select a WebAPI" SelectedIndexChanged="selectWebApiChoice"  FontFamily="Montserrat-Regular" TitleColor="#b3b2b2" TextColor="White" Margin="0,20,0,0"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>