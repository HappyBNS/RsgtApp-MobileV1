    </MenuItem>-->
    <ShellContent x:Name="lblInvoicePayment" AutomationId="AlblInvoicePayment" Title="" FlyoutIcon="" IsTabStop="True" ContentTemplate="{DataTemplate Views:InvoiceandPayment}"></ShellContent>
   
